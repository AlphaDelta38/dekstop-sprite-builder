<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <Protobuf 
      Include="../proto-contracts/VideoService/VideoBuilder/**/*.proto" 
      GrpcServices="Server" 
      ProtoRoot="../proto-contracts/VideoService/VideoBuilder"  
    />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FFMpegCore" Version="5.4.0" />
    <PackageReference Include="Grpc.AspNetCore" Version="2.64.0" />
    <PackageReference Include="Grpc.AspNetCore.Server.Reflection" Version="2.76.0" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="external-packages\mac\ffmpeg\ffmpeg" />
    <EmbeddedResource Include="external-packages\win\ffmpeg\ffmpeg.exe" />
  </ItemGroup>

</Project>
